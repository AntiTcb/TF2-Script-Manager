<UserControl x:Class="TF2_Script_Manager.Controls.CustomScriptFileManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TF2_Script_Manager.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="600"
             mc:Ignorable="d">
    <TabControl Grid.Row="0"
                HorizontalAlignment="Center"
                controls:ControlsHelper.HeaderFontSize="15"
                controls:TabControlHelper.IsUnderlined="True">
        <TabItem Header="Graphics">
            <StackPanel>
                <RadioButton Content="Chris'" />
                <RadioButton Content="M0RE's" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Settings">
            <StackPanel>
                <TextBlock Name="CommandSetting" Margin="3" />
                <ListBox HorizontalAlignment="Center" HorizontalContentAlignment="Center" />
            </StackPanel>
        </TabItem>
        <TabItem Header="Standalone Configs" />
    </TabControl>
</UserControl>
