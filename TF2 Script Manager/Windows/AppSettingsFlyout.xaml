<Controls:Flyout x:Class="TF2_Script_Manager.Windows.AppSettingsFlyout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TF2_Script_Manager.Windows"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             Header="Settings"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
                IsModal="True"
             >
    <StackPanel Orientation="Vertical">
        <Label Content="TF Folder Path" Margin="5 0" FontWeight="SemiBold" FontSize="14"/>
        <TextBox Name="TFPath" Controls:TextBoxHelper.ClearTextButton="True" Controls:TextBoxHelper.Watermark="(Your Steam Folder)\steamapps\common\Team Fortress 2\tf" MouseDoubleClick="OpenFileDialog" Margin="5"/>
    </StackPanel>
</Controls:Flyout>
